<?xml version="1.0" encoding="utf-8" ?>
<spritesheets>

  <spritesheet name="Textbox" src="">
    <states>
      <state name="Text">
        <layer name="Text"></layer>
      </state>
    </states>
    <layers>
      <layer name="Text" x="0" y="0">
        <frame name="Text"></frame>
      </layer>
    </layers>
    <frames>
      <!--Instead of using a picture, we can write some code that will be executed when the frame should be drawn-->
      <frame name="Text" code="context.textBaseline ='top';context.textAlign='start';context.font='20pt Verdana';context.fillStyle = vars.color;context.fillText(vars.text,x,100+y);" t="0"></frame>
    </frames>

  </spritesheet>

</spritesheets>